<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Awesome Chat</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link
      rel="shortcut icon"
      href="/images/logo_favicon/favicon-trungquandev.png"
    />
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- <link rel="stylesheet" href="/css/style.css" /> -->
  </head>
  <body>
    <%- include("../sections/navbar"); %> <% if (message.length > 0) { %>
    <div class="alert alert-success" role="alert">
      <%- message %>
    </div>
    <% } %> <% if (error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
      <%- error %>
    </div>
    <% } %>
    <div class="row">
      <div class="col-md-3">
        <%- include("../sections/left-side"); %>
      </div>
      <div class="col-md-9">
        <form action="/admin/backup" method="POST">
          <button type="submit" value="submit" class="btn btn-primary m-3">
            Back up
          </button>
          <span class="text-left">Save your backup file.</span>
        </form>

        <form action="/admin/backup/database" method="POST">
          <button type="submit" value="submit" class="btn btn-success m-3">
            Backup Database
          </button>
        </form>
        <form action="/admin/restore" method="POST">
          Please choose the version of database to restore
          <div class="row">
            <div class="col-xs-12 col-md-8 m-1">
              <select class="custom-select" name="version">
                <% for (let i = 0; i < backupMongooseVersions.length; i++) { %>
                <option value="<%- backupMongooseVersions[i] %>"
                  ><%- convertDate(backupMongooseVersions[i]) %></option
                >
                <% } %>
              </select>
            </div>
            <div class="col-xs-12 col-md-3 m-1">
              <button class="btn btn-danger" type="submit">
                Restore Database
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
