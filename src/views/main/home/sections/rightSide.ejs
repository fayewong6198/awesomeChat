<script>
  function show_menu(me, messageId) {
    event.preventDefault();
    hide_menu();
    $(`#context-menu${messageId}`).css({
      display: "block",
      background: "#fff",
      top: "50%",
    });
    $(`#context-menu${messageId}`).addClass("show");
    return false; //blocks default Webbrowser right click menu

    $("#context-menu p").on("click", function () {
      $(this).parent().removeClass("show").hide();
    });
  }

  function hide_menu() {
    $(`.context-menu`).removeClass("show").hide();
  }
</script>
